                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=hiding_place}" ClipboardContentBinding="{x:Null}" Header="Pop">
