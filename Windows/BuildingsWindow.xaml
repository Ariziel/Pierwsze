                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=church}" ClipboardContentBinding="{x:Null}" Header="Pop">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <Image Source="/Images/Kosciol_miniaturka.png" Stretch="Fill" Height="18" Width="18"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=church_f}" ClipboardContentBinding="{x:Null}" Header="Pop">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <Image Source="/Images/Kosciol_miniaturka.png" Stretch="Fill" Height="18" Width="18"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=watchtower}" ClipboardContentBinding="{x:Null}" Header="Pop">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <Image Source="/Images/Watchtower_miniaturka.png" Stretch="Fill" Height="18" Width="18"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Controls:MetroWindow>
