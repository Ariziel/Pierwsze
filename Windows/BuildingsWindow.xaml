                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <Image Source="/Images/Tartak_miniaturka.png" Stretch="Fill" Height="18" Width="18"/>
                        </DataTemplate>
                    </DataGridTextColumn.HeaderTemplate>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=clay_pit}" ClipboardContentBinding="{x:Null}" Header="Pop">
                    <DataGridTextColumn.HeaderTemplate>
                        <DataTemplate>
                            <Image Source="/Images/Cegielnia_miniaturka.png" Stretch="Fill" Height="18" Width="18"/>
